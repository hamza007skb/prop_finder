<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CBE9EB"
    tools:context=".AddPropertyActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Property Type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:background="@color/white"
            android:textColorHint="#d3d3d3">

            <AutoCompleteTextView
                android:id="@+id/propertyType_auto_complete_txt"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Property Status"
            android:background="@color/white"
            android:textColorHint="#d3d3d3">

            <AutoCompleteTextView
                android:id="@+id/propertyStatus_auto_compplete_txt"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Property Area"
            android:background="@color/white"
            android:textColorHint="#d3d3d3">

            <AutoCompleteTextView
                android:id="@+id/propertyArea_auto_complete_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  Price"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/price_txt" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  Longitude"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/longitude_txt" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  Latitude"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/latitude_txt" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  City"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/city_txt" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  Postal Code"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/postalCode_txt" />
    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="  No. of Rooms e.g. 4, 5"
        android:background="@drawable/rounded_edittext_background"
        android:textColorHint="#d3d3d3"
        android:id="@+id/roomCount_txt" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/black"
        android:id="@+id/attachImg_btn"
        />


</LinearLayout>